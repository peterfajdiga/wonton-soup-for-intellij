{
    "name": "IntellijWontonSoup",
    "author": "Peter Fajdiga",
    "dark": true,
    "colors": {
        "windowBg": "#494e58",
        "separator": "#646b76",
        "selectionBg": "#78889c",
        "hoverBg": "#7795b3",
        "activeBg": "#5a606b",
        "activeFg": "#b6c1d0",
        "buttonBg": "#525863"
    },
    "ui": {
        "*": {
            "background": "windowBg",
            "borderColor": "separator",
            "separatorColor": "separator"
        },

        "ActionButton": {
            "hoverBackground": "#00000000",
            "hoverBorderColor": "hoverBg",
            "pressedBackground": "activeBg",
            "pressedBorderColor": "hoverBg"
        },

        "Borders": {
            "color": "separator",
            "ContrastBorderColor": "separator"
        },

        "DefaultTabs": {
            "underlineColor": "selectionBg",
            "hoverBackground": "hoverBg",
            "underlinedTabBackground": "activeBg",
            "underlinedTabForeground": "activeFg"
        },

        "EditorTabs": {
            "underlineColor": "selectionBg",
            "hoverBackground": "hoverBg",
            "underlinedTabBackground": "activeBg",
            "underlinedTabForeground": "activeFg"
        },

        "ToolWindow": {
            "Header": {
                "background": "activeBg",
                "inactiveBackground": "windowBg"
            },

            "HeaderTab": {
                "selectedInactiveBackground": "windowBg",
                "hoverBackground": "hoverBg",
                "hoverInactiveBackground": "hoverBg",

                "underlineColor": "selectionBg",
                "inactiveUnderlineColor": "selectionBg"
            },

            "Button": {
                "hoverBackground": "hoverBg",
                "selectedBackground": "activeBg",
                "selectedForeground": "activeFg"
            }
        }
    }
}
