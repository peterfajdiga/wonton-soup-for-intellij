{
    "name": "IntellijWontonSoup",
    "author": "Peter Fajdiga",
    "dark": true,

    "colors": {
        "windowBg": "#494e58",
        "windowFg": "#b6c1d0",
        "separator": "#646b76",
        "selectionBg": "#78889c",
        "activeBg": "#5a606b",
        "activeFg": "#b6c1d0",
        "buttonBg": "#525863",
        "buttonBorder": "#78808d",
        "buttonDisabledBg": "#484d57",
        "buttonDisabledFg": "#6e7580",
        "buttonDisabledBorder": "#545a64",
        "defaultBg": "#5a626e",
        "defaultBorder": "#7a8697",
        "hoverBg": "#bdd7ff18",
        "hoverBorder": "#7795b3",
        "focusBorder": "#7d8d99"
    },

    "ui": {
        "*": {
            "background": "windowBg",
            "foreground": "windowFg",
            "borderColor": "separator",
            "separatorColor": "separator"
        },

        "ActionButton": {
            "hoverBackground": "#00000000",
            "hoverBorderColor": "hoverBorder",
            "pressedBackground": "activeBg",
            "pressedBorderColor": "hoverBorder"
        },

        "Button": {
            "startBackground": "buttonBg",
            "endBackground": "buttonBg",
            "startBorderColor": "buttonBorder",
            "endBorderColor": "buttonBorder",
            "focusedBorderColor": "focusBorder",
            "disabledBorderColor": "buttonDisabledBorder",
            "disabledText": "buttonDisabledFg",

            "default": {
                "startBackground": "defaultBg",
                "endBackground": "defaultBg",
                "startBorderColor": "defaultBorder",
                "endBorderColor": "defaultBorder",
                "focusColor": "focusBorder",
                "focusedBorderColor": "focusBorder"
            }
        },

        "Borders": {
            "color": "separator",
            "ContrastBorderColor": "separator"
        },

        "Component": {
            "focusColor": "focusBorder",
            "focusedBorderColor": "focusBorder",
            "disabledBorderColor": "buttonDisabledBorder"
        },

        "DefaultTabs": {
            "underlineColor": "selectionBg",
            "inactiveUnderlineColor": "#00000000",
            "hoverBackground": "hoverBg",
            "underlinedTabBackground": "activeBg",
            "underlinedTabForeground": "activeFg"
        },

        "EditorTabs": {
            "underlineColor": "selectionBg",
            "inactiveUnderlineColor": "#00000000",
            "hoverBackground": "hoverBg",
            "underlinedTabBackground": "activeBg",
            "underlinedTabForeground": "activeFg"
        },

        "ToolWindow": {
            "Header": {
                "background": "activeBg",
                "inactiveBackground": "windowBg"
            },

            "HeaderTab": {
                "selectedInactiveBackground": "windowBg",
                "hoverBackground": "hoverBg",
                "hoverInactiveBackground": "hoverBg",

                "underlineColor": "selectionBg",
                "inactiveUnderlineColor": "selectionBg"
            },

            "Button": {
                "hoverBackground": "hoverBg",
                "selectedBackground": "activeBg",
                "selectedForeground": "activeFg"
            }
        }
    },

    "icons": {
        "ColorPalette": {
            "Checkbox.Background.Default": "buttonBg",
            "Checkbox.Background.Disabled": "buttonDisabledBg",
            "Checkbox.Border.Default": "buttonBorder",
            "Checkbox.Border.Disabled": "buttonDisabledBorder"
        }
    }
}
